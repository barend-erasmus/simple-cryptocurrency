<script>
    $(document).ready(function () {

        var privateAddress = BlockChain.getPrivateAddress().replace(/(.{80})/g, '$1<br />');
        var publicAddress = BlockChain.getPublicAddress().replace(/(.{80})/g, '$1<br />');

        document.querySelector('#privateAddress').innerHTML = privateAddress;
        document.querySelector('#publicAddress').innerHTML = publicAddress;

        setInterval(() => {
            document.querySelector('#numberOfBlocks').innerHTML = BlockChain.blockChainService.blocks.length;

            document.querySelector('#balance').innerHTML = BlockChain.blockChainService.computeBalance(BlockChain.getPublicAddress(), BlockChain.blockChainService.blocks);
        }, 2000);
    });
</script>